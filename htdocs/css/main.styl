@import "mixins.styl"

@font-face
	font-family "Arial"

body
	float left
	margin 0
	color #000
	background-color #000
	overflow hidden
	font 12px "Arial"
	text-align center
	mix-user-select(none)

canvas
	cursor crosshair
	position absolute
	top 0
	left 0
	width 100%
	height 100%

.fps
	position absolute
	right 4px
	top 3px
	font-size 14px
	color #fff

.loading
	background url("/img/loading.gif") center center no-repeat
	z-index 5
	position absolute
	width 100%
	height 100%

.controls
	position absolute
	margin-left 0
	margin-right 0
	bottom 0
	width 1030px
	height 200px
	background url("/img/controls.png") center center no-repeat