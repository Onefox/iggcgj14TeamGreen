@import "mixins.styl"

@font-face
	font-family "Arial"

body
	float left
	margin 0
	color #000
	background-color #000
	overflow hidden
	font 12px "Arial"
	text-align center
	mix-user-select(none)

canvas
	cursor crosshair
	position absolute
	top 0
	left 0
	width 100%
	height 100%

.fps
	position absolute
	right 4px
	top 3px
	font-size 14px
	color #fff

.loading
	background url("../img/loading.gif") center center no-repeat
	z-index 5
	position absolute
	width 100%
	height 100%

.controls
	position absolute
	margin-left 0
	margin-right 0
	bottom 0
	width 1030px
	height 200px
	background url("../img/controls.png") center center no-repeat

.player-select
	position absolute
	top 20px
	left 20px
	width 204px
	height 105px
	background url("../img/ui/ui1.png") center center no-repeat


	.indicator
		position relative
		top 8px
		width 54px
		height 54px
		background url("../img/ui/selector.png") center center no-repeat
		opacity 0

	.choosen
		opacity 1
		mix-transition(.4s opacity)

		&.jerome
			left 6px

		&.lina
			left 75px

		&.olaf
			left 144px


	.fear
		position absolute
		width 30px
		height 30px
		top 60px
		background url("../img/ui/fear.png") center center no-repeat
		opacity 0

		&.jerome
			left 18px

		&.lina
			left 87px

		&.olaf
			left 156px


.visible
	opacity 1 !important